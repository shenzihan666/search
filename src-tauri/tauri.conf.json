{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Quick Search",
  "version": "0.1.0",
  "identifier": "com.ai-quick-search.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "AI Quick Search",
        "label": "main",
        "width": 900,
        "height": 600,
        "resizable": true,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "shadow": false
      },
      {
        "title": "Settings",
        "label": "settings",
        "url": "/settings",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost http://localhost:5173 ws://localhost:5173; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
